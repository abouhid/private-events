<p id="notice"><%= notice %></p>
<h1 class="title">Events Attended</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @user.attended_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <% if event.date > DateTime.now %>
          <td>Upcoming</td>
        <% else %>
          <td>Past</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', users_path %>
